<?xml version="1.0" encoding="utf-8"?>
<com.example.beratungskonfigurator.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layCheckable"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btnMinusGeraete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="bClickHandlerMinus"
        android:textSize="20sp"
        android:background="@drawable/button_minus" />

    <TextView
        android:id="@+id/anzGeraete"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPlusGeraete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="bClickHandlerPlus"
        android:textSize="20sp" 
        android:background="@drawable/button_plus"/>

    <CheckedTextView
        android:id="@+id/txtGeraeteNameChecked"
        android:layout_width="fill_parent"
        android:layout_marginLeft="15dip"
        android:layout_height="wrap_content"
        android:checkMark="@drawable/listitem_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@drawable/listitem_color_selector" />

</com.example.beratungskonfigurator.CheckableLinearLayout>