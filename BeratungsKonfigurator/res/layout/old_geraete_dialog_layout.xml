<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1200dip"
    android:layout_height="700dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialogTitelGeraete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dip"
                android:paddingLeft="20dip"
                android:paddingTop="30dip"
                android:text="Geräteauswahl"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bCloseGeraete"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_alignParentRight="true"
                android:padding="20dip" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/raeumeList"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:dividerHeight="2dip"
            android:listSelector="@drawable/listitem_color_selector_single"
            android:paddingBottom="20dip"
            android:paddingLeft="20dip" />

        <LinearLayout
            android:id="@+id/layGeraete"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <TabHost
                android:id="@+id/TabHost01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="50dip"
                android:paddingRight="20dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dip" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <LinearLayout
                            android:id="@+id/layGeraete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/titelGeraete"
                                android:layout_width="300dip"
                                android:layout_height="wrap_content"
                                android:paddingBottom="20dip"
                                android:paddingLeft="10dip"
                                android:text="Geräte auswählen: "
                                android:textSize="20sp" />

                            <ListView
                                android:id="@+id/geraeteList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:choiceMode="multipleChoice"
                                android:divider="@drawable/divider"
                                android:dividerHeight="2dip"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dip"
                                android:scrollbarAlwaysDrawVerticalTrack="true"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarStyle="outsideInset" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layAusloeser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/titelStartSzenario"
                                android:layout_width="300dip"
                                android:layout_height="wrap_content"
                                android:paddingBottom="20dip"
                                android:paddingLeft="10dip"
                                android:text="Szenario starten durch folgende Geräte: "
                                android:textSize="20sp" />

                            <ListView
                                android:id="@+id/ausloeserList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:choiceMode="multipleChoice"
                                android:divider="@drawable/divider"
                                android:dividerHeight="2dip"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dip"
                                android:scrollbarAlwaysDrawVerticalTrack="true"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarStyle="outsideInset" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layBeender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/titelEndSzenario"
                                android:layout_width="300dip"
                                android:layout_height="wrap_content"
                                android:paddingBottom="20dip"
                                android:paddingLeft="10dip"
                                android:text="Szenario beenden durch folgende Geräte: "
                                android:textSize="20sp" />

                            <ListView
                                android:id="@+id/beenderList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:choiceMode="multipleChoice"
                                android:divider="@drawable/divider"
                                android:dividerHeight="2dip"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dip"
                                android:scrollbarAlwaysDrawVerticalTrack="true"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarStyle="outsideInset" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TabHost>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>