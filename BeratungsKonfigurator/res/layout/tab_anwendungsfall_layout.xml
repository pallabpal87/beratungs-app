<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tabTitel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dip"
        android:paddingLeft="20dip"
        android:paddingTop="30dip"
        android:text="Wohnungsdaten"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/wohnungList"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:dividerHeight="2dip"
            android:listSelector="@drawable/listitem_color_selector_single"
            android:paddingBottom="50dip"
            android:paddingLeft="20dip" />

        <LinearLayout
            android:id="@+id/layWohninformation"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohninformation"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohninformation"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wohninformationStockwerkeText"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Anzahl Stockwerke:"
                    android:textSize="20sp" />

                <NumberPicker
                    android:id="@+id/anzStockwerkePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wohninformationFlaecheText"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="WohnflÃ¤che in Quadratmeter:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/wohninformationFlaeche"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:gravity="right"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="qm"
                    android:imeOptions="actionNext"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/wohninformationFlaecheQM"
                    android:layout_width="40dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="qm"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>