<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tabTitel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dip"
        android:paddingLeft="20dip"
        android:paddingTop="30dip"
        android:text="gesundheitliche Problemstellung"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/gesundheitList"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:dividerHeight="2dip"
            android:listSelector="@drawable/listitem_color_selector_single"
            android:paddingBottom="50dip"
            android:paddingLeft="20dip" />

        <LinearLayout
            android:id="@+id/layErkrankungen"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelErkrankungen"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Erkrankungen"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/erkrankungenList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingBottom="50dip"
                android:paddingLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layPflege"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelPflege"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Pflege erfolgt durch"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/pflegeList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingBottom="50dip"
                android:paddingLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layAlltagskompetenzen"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelAlltagskompetenzen"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Alltagskompetenzen"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/alltagskompetenzenList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingBottom="50dip"
                android:paddingLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layBeobachtungen"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelBeobachtungen"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Beobachtungen"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/beobachtungenList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>