<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tabTitel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dip"
        android:paddingLeft="20dip"
        android:paddingTop="30dip"
        android:text="Wohnungsdaten"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/wohnungList"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:dividerHeight="2dip"
            android:listSelector="@drawable/listitem_color_selector_single"
            android:paddingBottom="50dip"
            android:paddingLeft="20dip" />

        <LinearLayout
            android:id="@+id/layWohnsituation"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnsituation"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnsituation"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnsituationList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingBottom="50dip"
                android:paddingLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnform"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnform"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnform"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnformList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingBottom="50dip"
                android:paddingLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohninformation"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohninformation"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohninformation"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/wohninformationStockwerkeText"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Anzahl Stockwerke:"
                    android:textSize="20sp" />

                <NumberPicker
                    android:id="@+id/anzStockwerkePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/wohninformationFlaecheText"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnfläche in Quadratmeter:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/wohninformationFlaeche"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="qm"
                    android:imeOptions="actionNext"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/wohninformationFlaecheQM"
                    android:layout_width="40dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="qm"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnumfeld"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnumfeld"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnumfeld"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnumfeldList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingBottom="50dip"
                android:paddingLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnraeume"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnraeume"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnräume"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnraeumeList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnbarrieren"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnbarrieren"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnbarrieren"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnbarrierenList"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>